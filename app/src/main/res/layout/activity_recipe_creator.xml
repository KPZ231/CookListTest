<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecipeCreatorActivity">

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TytuÅ‚ przepisu" />

    <EditText
        android:id="@+id/product_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Produkt"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/add_product_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj produkt" />

    <EditText
        android:id="@+id/step_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Krok"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/add_step_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj krok" />

    <Button
        android:id="@+id/save_recipe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz przepis" />

</LinearLayout>
